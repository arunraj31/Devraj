{
  "name": "AiChatBot",
  "description": "Telegram Bot using Pyrogram",
  "repository": "https://github.com/ZeroXCoderZ/AiChatBot",
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API Hash",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID (Owner)",
      "required": true
    },
    "LOGGER_ID": {
      "description": "A telegram group id add your bot in that group and promote to admin",
      "required": true
    },
    "MONGO_URL": {
      "description": "Your mongo db url",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "stack": "heroku-22"
}

